          script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
          script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
    body.bg-black
        #login-box.form-box
            .header Sign In
            form(action="/login", method="post")
                .body.bg-gray
                    .form-group
                        input.form-control(type="text", name="userid", placeholder="User ID")
                    .form-group
                        input.form-control(type="password", name="password", placeholder="Password")
                    .form-group
                        label
                            .icheckbox_flat-red.checked(aria-disabled="false", aria-checked="true", style="position: relative;")
                                input.flat-red(type="checkbox", name="remember_me", style="position: absolute; opacity: 0;", checked="")
                                ins.iCheck-helper(style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: none repeat scroll 0% 0% rgb(255, 255, 255); border: 0px none; opacity: 0;")
                            | Remember me
                .footer
                    button.btn.bg-olive.btn-block(type="submit") Sign me in
                    .form-group
                        .alert.alert-danger.alert-dismissable
                            i.fa.fa-ban
                            button.close(type="button", data-dismiss="alert", aria-hidden="true") &#215;
                            b Alert!
                            | Danger alert preview. This alert is dismissable. A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.
        // jQuery 2.0.2
        script(src="/js/jquery-2.1.1.min.js")
        // Bootstrap
        script(src="/js/bootstrap.min.js", type="text/javascript")
